@model BlogNWTest.Models.Post

@{
    ViewData["Title"] = "Post";
}

<div style="border: 1px solid silver;margin: 0 auto;width:400px;">
    <div style="text-align:center; border: 1px solid silver;">
        Blog - Edit Post
    </div>
    <h5>Edit Post</h5>
    @using (Html.BeginForm("EditPost", "Home", FormMethod.Post))
    {
        <div class="form-group">
            <div class="row align-items-center">
                <div class="col-md-3">
                    <label for="Name">Title</label><br />
                    <label for="Name">Category</label><br />
                    <label for="Name">Pub Date</label>
                </div>
                <div class="col-md-3">
                    @Html.TextBox("Title", Model.Title, new { style = "color:red" })<br />
                    @*@Html.DropDownList("Categorie", new SelectList(Model.categories), "--Select--", new { @class = "form-control" })*@
                    @Html.EditorFor(model => model.PulicationDate, new { id = "news_date" })
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row align-items-center">
                <div class="col-12">
                    <b>Content </b>
                    <div>
                        @Html.TextArea("Content", Model.Content, new
                                            {
                                                          cols = "50",
                                                          rows = "5",
                                                          @style = "color:red"
                                            })
                    </div>

                </div>
            </div>
        </div>

        <div>
            <input type="submit" value="save" class="btn btn-primary" />
        </div>

        @ViewBag.message

    }
    <script>
    $(document).ready(function () {
        $("#news_date").datepicker({ dateFormat: 'dd/mm/yy' });
    });
    $(function () {
        $("#datepicker").datepicker();
    });
    </script>
    <div>
        <a asp-action="Index">Back to List</a>
    </div>

</div>