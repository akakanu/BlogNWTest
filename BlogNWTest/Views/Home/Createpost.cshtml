@model BlogNWTest.Models.Post

@{
    ViewData["Title"] = "Posts";
 
}

<div style="border: 1px solid silver;margin: 0 auto;width:400px;">
    <div style="text-align:center; border: 1px solid silver;">
        Blog - Add Post
    </div>
    <h5>Add Post</h5>
    @using (Html.BeginForm("AddPost", "Home", FormMethod.Post))
    {
        <div class="form-group">
            <div class="row align-items-center">
                <div class="col-md-3">
                    <label for="Title">Title</label><br />
                    <label for="Categorie">Category</label><br />
                    <label for="Date">Pub Date</label>
                </div>
                <div class="col-md-3">
                    @Html.TextBox("Title", "[current value]", new { style = "color:red" })<br />
                    @Html.DropDownList("Categorie", new SelectList(Model.categories), "--Select--", new { @class = "form-control" })
                    @*@Html.DropDownListFor(n => n.Categorie, new SelectList(Model.categories, "CategorieId", "Title", 1), "--Select--")*@
                    @*@Html.TextBox("Date", " ", @Model.Post.PulicationDate.ToString("yyyy-MM-dd"), new { @class = "form-control" })
        @Html.TextBox("Date", "[current value]", new { style = "color:red", @class = "date-picker form-control auto-focus" })*@
                    @Html.EditorFor(model => model.PulicationDate, new { id = "news_date" })
                    @*<input asp-for="Post.PulicationDate" id="datepicker" class="form-control" placeholder="select date" />*@
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row align-items-center">
                <div class="col-12">
                    <b>Content </b>
                    <div>
                        @Html.TextArea("Content", "[current value]", new
                                            {
                                                          cols = "50",
                                                          rows = "5",
                                                          @style = "color:red"
                                            })
                    </div>

                </div>
            </div>
        </div>

        <div>
            <input type="submit" value="save" class="btn btn-primary"/>
        </div>

        @ViewBag.message

    }
<script>
    $(document).ready(function () {
        $("#news_date").datepicker({ dateFormat: 'dd/mm/yy' });
    });
    $(function () {
        $("#datepicker").datepicker();
    });
</script>
    <div>
        <a asp-action="Index">Back to List</a>
    </div>

</div>




